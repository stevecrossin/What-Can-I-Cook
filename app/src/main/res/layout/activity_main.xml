<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".screens.MainActivity">

    <TextView
        android:id="@+id/aboutTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text="@string/main_menu_name"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/breakfastbutton"/>

    <ImageButton
        android:id="@+id/aboutApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/aboutAppDesc"
        android:onClick="aboutApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/aboutTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abouticon" />

    <ImageView
        android:id="@+id/breakfastbutton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/breakfastContentDesc"
        android:onClick="breakfastIngredients"
        app:layout_constraintBottom_toTopOf="@+id/dinner"
        app:layout_constraintEnd_toStartOf="@+id/lunch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutTitle"
        app:srcCompat="@drawable/breakfast" />

    <ImageView
        android:id="@+id/lunch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/lunchButtonContentDesc"
        android:onClick="lunchIngredients"
        app:layout_constraintBottom_toTopOf="@+id/dessert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/breakfastbutton"
        app:layout_constraintTop_toBottomOf="@+id/aboutTitle"
        app:srcCompat="@drawable/lunch" />

    <ImageView
        android:id="@+id/dinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/lunchContentDesc"
        android:onClick="dinnerIngredients"
        app:layout_constraintBottom_toTopOf="@+id/savedRecipes"
        app:layout_constraintEnd_toStartOf="@+id/dessert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakfastbutton"
        app:srcCompat="@drawable/dinner" />

    <ImageView
        android:id="@+id/dessert"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/dessertContentDesc"
        android:onClick="dessertIngredients"
        app:layout_constraintBottom_toTopOf="@+id/myPantry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dinner"
        app:layout_constraintTop_toBottomOf="@+id/lunch"
        app:srcCompat="@drawable/dessert" />

    <ImageView
        android:id="@+id/savedRecipes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/savedrecipebuttonContentDesc"
        android:onClick="savedRecipes"
        app:layout_constraintBottom_toTopOf="@+id/dietaryNeedsButton"
        app:layout_constraintEnd_toStartOf="@+id/myPantry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinner"
        app:srcCompat="@drawable/savedrecipes" />

    <ImageView
        android:id="@+id/myPantry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/pantrybuttonContentDesc"
        android:onClick="userPantry"
        app:layout_constraintBottom_toTopOf="@+id/dietaryNeedsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/savedRecipes"
        app:layout_constraintTop_toBottomOf="@+id/dessert"
        app:srcCompat="@drawable/ingredientsicon" />

    <Button
        android:id="@+id/dietaryNeedsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/secondaryColor"
        android:onClick="dietaryPreferences"
        android:text="@string/dietary_needs"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/savedRecipes"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintEnd_toStartOf="@+id/logoutButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/secondaryColor"
        android:onClick="logout"
        android:text="@string/logout"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/dietaryNeedsButton"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dietaryNeedsButton"/>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6486258628588307/9112076958"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/dietaryNeedsButton" />

</android.support.constraint.ConstraintLayout>